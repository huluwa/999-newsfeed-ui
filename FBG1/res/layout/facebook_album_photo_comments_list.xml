<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/facebook_backgroud">
        <include layout="@layout/facebook_header">
        </include>        
         <LinearLayout
         android:gravity="left"
         android:orientation="horizontal"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="5.0dip"
         android:layout_marginBottom="5.0dip"
         android:background="#F7F7F7">
                <ImageView
                        android:id="@+id/photo_image"                        
                        android:gravity="center_vertical"                                
                        android:layout_width="wrap_content"                                              
                        android:layout_height="wrap_content">
                </ImageView>                    
                <LinearLayout
                android:gravity="left"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="#F7F7F7">
	                <TextView
	                        android:textSize="16.0sp"
	                        android:textStyle="bold"
	                        android:textColor="#3B5998"
	                        android:id="@+id/photo_name_detail"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content"
	                        android:maxLines="2">
	                </TextView>
	                <TextView
	                        android:textSize="14.0sp"
	                        android:textColor="#cccccc"
	                        android:id="@+id/photo_create_date"
	                        android:layout_width="wrap_content"
	                        android:layout_height="wrap_content">
	                </TextView>
                </LinearLayout>
        </LinearLayout>
        
        <ListView
                android:id="@+id/comments_list"                
                android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
                android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawSelectorOnTop="false"
                android:cacheColorHint="#ffffffff"
                android:listSelector="@drawable/list_selector_background"
                android:divider="@drawable/divider"
                android:dividerHeight="1.0px"
                android:layout_weight="1.0"
                >
        </ListView>

              
        <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/photo_comments_layout"
                android:background="#cccccc"
                android:visibility="visible"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <EditText
                        android:gravity="top"
                        android:id="@+id/photo_comments"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_marginRight="6.0dip"
                        android:hint="@string/photo_hint_comments"
                        android:maxLines="4"
                        android:minLines="2"
                        android:textColor="#000000">
                </EditText>
                <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/photo_action_region"
                        android:background="@drawable/bottom_bar"
                        android:paddingTop="2.0dip"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/photo_your_comments"
                        >
                        <Button
                                android:id="@+id/photo_comment_add"
                                android:focusable="false"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2.0dip"
                                android:layout_marginTop="2.0dip"
                                android:layout_marginRight="5.0dip"
                                android:layout_marginBottom="3.0dip"
                                android:text="@string/sns_add_comment"
                                android:background="@drawable/blue_button_background"
                                android:layout_weight="0.5"
                                >
                        </Button>
                        <Button
                                android:id="@+id/photo_cancel"
                                android:focusable="false"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5.0dip"
                                android:layout_marginTop="2.0dip"
                                android:layout_marginRight="2.0dip"
                                android:layout_marginBottom="3.0dip"
                                android:text="@string/sns_cancel"
                                android:background="@drawable/blue_button_background"
                                android:layout_weight="0.5"
                                >
                        </Button>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>
