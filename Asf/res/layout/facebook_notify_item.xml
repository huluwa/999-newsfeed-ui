<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"        
        android:layout_height="110dip"
        android:orientation="vertical"
        android:paddingLeft="5px">
        
    <ImageView android:id="@+id/facebook_notify_img_ui"
                    android:layout_width="80px"
                    android:layout_height="80px"  
                    android:padding="10px"
                    android:layout_alignParentLeft="true"                   
                    android:background="#FFFFFF"/> 
   <LinearLayout
       android:layout_width="40px"
       android:layout_height="40px"
       android:layout_marginLeft="35px"
       android:layout_marginTop="0px"
       android:layout_weight="1.0"
       android:id="@+id/facebook_number_layout"
       android:background="@drawable/notification_small">
	   <TextView
	          android:id="@+id/nofiy_item_icon_size"
	          android:layout_width="fill_parent"
	          android:layout_height="fill_parent"                       
	          android:textSize="14sp"                      
	          android:textStyle="bold"
	          android:layout_gravity="center_vertical"
	          android:paddingLeft="10px"
	          android:textColor="#FFFFFF"/>
    </LinearLayout>       
  	
                
    <View  android:id="@+id/facebook_nofiy_item_blank"
           android:layout_width="4px"
           android:layout_height="fill_parent"     
           android:layout_toRightOf="@+id/facebook_notify_img_ui" />      
                             
    <TextView android:id="@+id/facebook_notify_name"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"    
                 android:layout_toRightOf="@+id/facebook_nofiy_item_blank"            
                 android:gravity="center_vertical"     
                 android:paddingLeft="5px"                                                
                 android:linksClickable="false"
                 android:layout_weight="1"
                 android:textAppearance="@style/sns_username"          
                 android:layout_centerVertical="true"/>
    
    <TextView android:id="@+id/facebook_notify_detail"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"
                 android:gravity="right"     
                 android:layout_centerVertical="true"
                 android:layout_toRightOf="@+id/facebook_notify_name"                                                       
                 android:linksClickable="false"
                 android:textAppearance="@style/sns_time"
                 android:layout_weight="1"/>
</RelativeLayout>
    
