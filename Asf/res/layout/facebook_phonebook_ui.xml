<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"        
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingRight="7dip"
        android:paddingTop="3dip">
     
           <ImageView android:id="@+id/phonebook_img_ui"
           android:layout_width="50dip"
           android:layout_height="50dip"                
           android:layout_gravity="top"
           android:layout_alignParentLeft="true"                   
           android:background="#00000000"/>

       	    <TextView android:id="@+id/phonebook_user_name"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"    
            android:layout_toRightOf="@+id/phonebook_img_ui"            
            android:layout_gravity="left"
            android:paddingLeft="5px" 
            android:paddingTop="3px"                    
            android:linksClickable="false"
            android:textAppearance="@style/sns_big_username_blue"
            android:layout_weight="1"/>
       
            <Button android:id="@+id/facebook_add_as_friend"
             android:layout_width="wrap_content"
             android:layout_height="fill_parent"
             android:textSize="18px"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:background="@drawable/blue_button_background"/>
            
              
             <LinearLayout  
	         android:layout_width="wrap_content"
	         android:paddingLeft="50dip"
	         android:layout_height="wrap_content"
	         android:layout_below="@+id/phonebook_user_name"	    
	         android:orientation="vertical" >
		        <TextView android:id="@+id/phonebook_email"
	             android:layout_width="wrap_content"
	             android:layout_height="fill_parent"
	             android:gravity="center_vertical"                                                         
	             android:linksClickable="false"
	             android:layout_below="@+id/phonebook_user_name"	
	             android:singleLine="true"             
	             android:paddingLeft="5px"
	             android:paddingTop="3px"
	             android:layout_weight="1"
	             android:textAppearance="@style/sns_text"/>  
	        
	               <View
	               android:layout_width="fill_parent"
	               android:layout_below="@+id/phonebook_email"
	               android:layout_height="2px"
	               android:layout_weight="1" />  
	           
	            <TextView android:id="@+id/phonebook_cell"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:gravity="center_vertical"                                                  
	            android:linksClickable="false"
	            android:paddingLeft="5px"
	            android:paddingTop="3px"
	            android:singleLine="true"
	            android:textAppearance="@style/sns_text"
	            android:layout_weight="1"/>
	            
	            <View
	               android:layout_width="fill_parent"
	               android:layout_below="@+id/phonebook_cell"
	               android:layout_height="2px"
	               android:layout_weight="1" />
	               
	            <TextView android:id="@+id/phonebook_phone"
	            android:layout_width="wrap_content"
	            android:layout_height="fill_parent"
	            android:gravity="center_vertical"                          
	            android:linksClickable="false"
	            android:paddingLeft="5px"
	            android:paddingTop="3px"
	            android:singleLine="true"
	            android:textAppearance="@style/sns_text"
	            android:layout_weight="1"
	            android:textSize="18px"/>
            </LinearLayout>
             
</RelativeLayout>
                
