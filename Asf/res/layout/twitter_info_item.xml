<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/twitter_info_item"
        android:layout_width="fill_parent"        
        android:layout_height="50dip"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:layout_gravity="center_vertical"
        android:paddingRight="7dip">     
                                          
       <TextView android:id="@+id/twitter_info"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent" 
                 android:paddingLeft="5dip"                 
                 android:textAppearance="@style/sns_big_username_blue"
                 android:layout_weight="1"/>    
                 
       
       <RelativeLayout android:id="@+id/facebook_arrow_region"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="5px"
        android:layout_marginLeft="5px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
	       <ImageView android:id="@+id/twitter_goto_img"
	       android:layout_width="wrap_content"
	       android:layout_height="fill_parent"
	       android:background="@drawable/facebook_fold"/>               
      </RelativeLayout>
    
</RelativeLayout>

