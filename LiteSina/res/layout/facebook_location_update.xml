<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:keepScreenOn="true"
    android:background="@color/facebook_backgroud">

    <include layout="@layout/twitter_action">
    </include>
    
   <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5px"   
        android:paddingTop="5dip"        
        android:layout_gravity="top">    
              <RelativeLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:addStatesFromChildren="true">                   
                   <EditText
                   android:id="@+id/facebook_location_message_editor"
                   android:layout_width="fill_parent"       
                   android:layout_height="wrap_content"     
                   android:autoText="true"                 
                   android:capitalize="sentences"
                   android:maxLines="10"           
                   android:minHeight="55dip"
                   android:textColor="#000000"           
                   android:scrollHorizontally="true"
                   android:background="@drawable/editbox_background"/>
                   
                   <TextView
                    android:id="@+id/facebook_location_text_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffff00"
                    android:textSize="9sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                     />
              </RelativeLayout>   
              
              <CheckBox android:id="@+id/link_map"             
               android:textSize="14sp" 
               android:layout_width="85dip" 
               android:layout_height="55dip"
               android:layout_marginTop="5px"
               android:layout_marginLeft="10px"
               android:textColor="#ff000000"
               android:layout_gravity="center_vertical"
             />                         
   </LinearLayout>
   
   <LinearLayout
            android:id="@+id/facebook_tab_span"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"    
            android:paddingBottom="5dip"
            android:paddingTop="10dip"          
            android:paddingLeft="5px"        
            android:orientation="horizontal">     
              <Button  android:id="@+id/facebook_share_button"
              android:text="@string/facebook_status_update_title"  
              android:layout_width="110dip"
              android:layout_height="48dip"        
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:background="@drawable/twitter_button_background" 
              android:layout_gravity="left"/> 
   </LinearLayout>  
       
   <TextView
       android:id="@+id/facebook_location"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:paddingLeft="5px"   
       android:textSize="16sp"
       android:textColor="#000000"
       android:layout_alignParentRight="true"       
   />
   
</LinearLayout>
