<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/facebook_backgroud">
    
    <include layout="@layout/facebook_header">
    </include>
        
    <LinearLayout android:id="@+id/banner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5px"
        android:paddingBottom="10px"
        android:gravity="center_vertical">
        <ImageView  android:id="@+id/phonebook_img_logo_ui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"               
                    android:layout_gravity="left"
                    android:paddingTop="5px"
                    android:layout_alignParentLeft="true"   
                    android:nextFocusRight="@+id/phonebook_user_name"                
                    android:background="#00000000"/>
                    
		<TextView android:id="@+id/phonebook_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"  
                    android:paddingTop="5px"        
                    android:layout_gravity="center_vertical"       
                    android:gravity="center_vertical"
                    android:paddingLeft="10px"                        
                    android:linksClickable="false"
                    android:textAppearance="@style/sns_big_username_blue"
                    android:layout_weight="1"/>
   </LinearLayout>
   
   <View     android:layout_width="fill_parent"
             android:background="@drawable/divider"
             android:layout_height="1dip"/>  
               
   <ListView android:id="@+id/phonebook_info_list"
            android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:layout_marginTop="1dip"
            android:layout_marginBottom="0dip"
            android:paddingBottom="0dip"
            android:scrollbarStyle="outsideOverlay"
            android:listSelector="@drawable/list_selector_background"
            android:cacheColorHint="#00000000"/>
            
  <View     android:layout_width="fill_parent"
            android:background="@drawable/divider"
            android:layout_height="1dip"/>         
</LinearLayout>
 
