<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"        
        android:layout_height="wrap_content"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">     
   
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:orientation="horizontal">     
	    <ImageView android:id="@+id/facebook_friends_img_ui"
	                    android:layout_width="50dip"
	                    android:layout_height="50dip"    
	                    android:scaleType="centerCrop"            
	                    android:gravity="left"                    
	                    android:layout_alignParentLeft="true"   
	                    android:layout_centerVertical="true"/>
    
	    <LinearLayout 
		    android:layout_centerVertical="true"
		    android:layout_width="wrap_content"
		    android:layout_height="fill_parent"
		    android:orientation="vertical"
		    android:paddingRight="5px">                      
		    <TextView android:id="@+id/facebook_friend_user_name"
		                 android:layout_width="wrap_content"
		                 android:layout_height="fill_parent"  
		                 android:paddingLeft="5dip"            
		                 android:gravity="center_vertical"                                                    
		                 android:linksClickable="false"
		                 android:singleLine="false"
		                 android:layout_weight="1"     
		                 android:textAppearance="@style/sns_big_username_blue"/>
		                 
		    <TextView android:id="@+id/facebook_friend_bd"
		                 android:layout_width="wrap_content"
		                 android:layout_height="fill_parent"      
		                 android:gravity="center_vertical" 
		                 android:paddingLeft="5dip"                                                   
		                 android:linksClickable="false"
		                 android:layout_weight="1"
		                 android:textAppearance="@style/sns_time_bd"
		                 android:visibility="gone"/>  
		                 
			<TextView android:id="@+id/facebook_friend_bd_month"
					      android:layout_width="wrap_content"
					      android:layout_height="fill_parent"
					      android:paddingLeft="5dip"            
					      android:gravity="right"   
					      android:layout_gravity="right"                                                  
					      android:linksClickable="false"
					      android:layout_weight="1"
					      android:layout_alignParentRight="true"
					      android:textAppearance="@style/sns_time"
					      android:visibility="gone"/>
	    </LinearLayout>  
    </LinearLayout>         
    
    <ImageView android:id="@+id/facebook_friend_groupmember_request"
                 android:layout_width="30dip"
                 android:layout_height="30dip"                     
                 android:background="#00000000"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:visibility="gone"/> 
                    
    <RelativeLayout android:id="@+id/facebook_friend_phonebook_region"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:visibility="gone">
                 <ImageView android:id="@+id/facebook_friend_call"
                 android:layout_width="40dip"
                 android:layout_height="40dip"                     
                 android:background="@drawable/sym_action_call"                 
                 android:visibility="gone" />
                 
                 <ImageView android:id="@+id/facebook_friend_email"
                 android:layout_width="40dip"
                 android:layout_height="40dip"                     
                 android:background="@drawable/sym_action_email"
                 android:layout_toRightOf="@+id/facebook_friend_call"                 
                 android:visibility="gone" />        
    </RelativeLayout>  
    <!-- 
        <Button android:id="@+id/facebook_friend_poke_back"
            android:layout_width="100px"
            android:layout_height="30px"
            android:background="@color/light_blue"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="18dip"
            android:text="@string/menu_facebook_title_poke_back"
            android:visibility="gone"/>
    -->
    <ImageView android:id="@+id/facebook_friend_poke_back"
                 android:layout_width="40dip"
                 android:layout_height="40dip"    
                 android:background="@drawable/poke"
                 android:layout_alignParentRight="true"
                 android:layout_centerVertical="true"
                 android:visibility="gone"/> 
                      
</RelativeLayout>
    
