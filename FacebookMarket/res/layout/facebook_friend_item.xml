<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"        
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="5dip"
        android:paddingTop="5dip"
        android:paddingBottom="5dip">     
        
    <ImageView android:id="@+id/facebook_friends_img_ui"
                    android:layout_width="50dip"
                    android:layout_height="50dip"                
                    android:gravity="left"                    
                    android:layout_alignParentLeft="true"                   
                    android:background="#00000000"/>
                             
    <TextView android:id="@+id/facebook_friend_user_name"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"    
                 android:layout_toRightOf="@+id/facebook_friends_img_ui"
                 android:paddingLeft="5dip"            
                 android:gravity="center_vertical"                                                    
                 android:linksClickable="false"
                 android:layout_weight="1"     
                 android:textAppearance="@style/sns_big_username_blue"/>
                 
    <TextView android:id="@+id/facebook_friend_bd"
                 android:layout_width="wrap_content"
                 android:layout_height="fill_parent"    
                 android:layout_toRightOf="@+id/facebook_friends_img_ui"  
                 android:layout_below="@+id/facebook_friend_user_name"          
                 android:gravity="center_vertical" 
                 android:paddingLeft="5dip"                                                   
                 android:linksClickable="false"
                 android:layout_weight="1"
                 android:textAppearance="@style/sns_time_bd"
                 android:visibility="gone"/>  
                 
	<TextView android:id="@+id/facebook_friend_bd_month"
			      android:layout_width="wrap_content"
			      android:layout_height="fill_parent"    
			      android:layout_below="@+id/facebook_friend_user_name" 
			      android:layout_toRightOf="@+id/facebook_friend_bd"
			      android:paddingLeft="5dip"            
			      android:gravity="right"                                                     
			      android:linksClickable="false"
			      android:layout_weight="1"
			      android:layout_alignParentRight="true"
			      android:textAppearance="@style/sns_time"
			      android:visibility="gone"/>
                 
    
    <ImageView android:id="@+id/facebook_friend_groupmember_request"
                 android:layout_width="30dip"
                 android:layout_height="30dip"                     
                 android:background="#00000000"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentTop="true"
                 android:visibility="gone"/> 
                    
    <RelativeLayout android:id="@+id/facebook_friend_phonebook_region"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                 <ImageView android:id="@+id/facebook_friend_call"
                 android:layout_width="40dip"
                 android:layout_height="40dip"                     
                 android:background="@drawable/sym_action_call"                 
                 android:visibility="gone" />
                 
                 <ImageView android:id="@+id/facebook_friend_email"
                 android:layout_width="40dip"
                 android:layout_height="40dip"                     
                 android:background="@drawable/sym_action_email"
                 android:layout_toRightOf="@+id/facebook_friend_call"                 
                 android:visibility="gone" />        
    </RelativeLayout>  

</RelativeLayout>
    
