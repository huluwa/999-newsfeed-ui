<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/facebook_backgroud">
    
    <include layout="@layout/facebook_header">
    </include>
     
    <LinearLayout
        android:id="@+id/facebook_search_span"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:visibility="gone">
           <Button
                android:id="@+id/search_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:gravity="center_vertical"
                android:nextFocusRight="@+id/embedded_text_editor"   
                android:layout_alignParentLeft="true"
                android:background="@drawable/search"
                android:layout_centerVertical="true" 
                android:visibility="gone"/>
                          
               <EditText android:id="@+id/embedded_text_editor"
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:paddingLeft = "50dip"                 
                 android:background = "@drawable/searchbar"
                 android:drawableRight="@drawable/search"
                 android:singleLine="true"
                 android:drawablePadding="5px"
                 android:hint="@string/hint_keyword_subject_body"/>
               <!-- 
               <EditText
                   android:id="@+id/embedded_text_editor"
                   android:layout_width="fill_parent"       
                   android:layout_height="wrap_content"     
                   android:autoText="true"                 
                   android:capitalize="sentences"
                   android:singleLine="true"
                   android:maxLines="1"
                   android:scrollHorizontally="true"                   
                   />
               -->  
   </LinearLayout>
   
    <LinearLayout
                android:id="@+id/subject_name_span"
                android:gravity="left"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F7F7F7"
                android:visibility="gone">
                <TextView
                        android:textSize="16.0sp"
                        android:textStyle="bold"
                        android:textColor="#3B5998"
                        android:id="@+id/subject_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                </TextView>
                <TextView
                        android:textSize="16.0sp"                        
                        android:textColor="#3B5998"
                        android:id="@+id/relative_users"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                </TextView>
                <TextView
                        android:textSize="14.0sp"
                        android:textColor="#cccccc"
                        android:id="@+id/subject_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                </TextView>
        </LinearLayout>
        
     <LinearLayout
         android:id="@+id/facebook_tab_span"
         android:layout_width="fill_parent"
         android:layout_height="50dip"
         android:paddingTop="5dip"
         android:paddingBottom="5dip"
         android:paddingLeft="5px"
         android:paddingRight="5px"
         android:orientation="horizontal"
         android:background="#FFFFFF"
         android:visibility="gone">  
            <Button  android:id="@+id/facebook_tab_message_button"
                  android:text="@string/menu_title_mailbox_inbox"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:focusable="true"  
                  android:focusableInTouchMode="true"              
                  android:layout_weight="1"         
                  android:layout_alignParentTop="true"
                  android:layout_alignParentLeft="true"/>
            <Button  android:id="@+id/facebook_tab_sent_button"
                  android:text="@string/menu_title_mailbox_sent"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent" 
                  android:focusable="true"  
                  android:focusableInTouchMode="true"           
                  android:paddingLeft="3px"       
                  android:layout_weight="1"
                  android:layout_alignParentTop="true"/>
            <Button  android:id="@+id/facebook_tab_update_button"
                  android:text="@string/facebook_updates_title"                  
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent" 
                  android:focusable="true"  
                  android:focusableInTouchMode="true"               
                  android:layout_weight="1" 
                  android:paddingLeft="3px"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentRight="true"/>                        
   </LinearLayout>  
   
    
   <ListView android:id="@+id/facebook_message_list"
        android:scrollbarTrackVertical="@drawable/scrollbar_vertical_track"
        android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb"
        android:paddingTop="5dip"
        android:paddingBottom="10dip"
        android:divider="@drawable/divider" 
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:listSelector="@drawable/list_selector_background"        
        android:cacheColorHint="#FFFFFFFF"/>
   
    <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:id="@+id/facebook_compose_span"
                android:background="#cccccc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <EditText
                        android:gravity="top"
                        android:id="@+id/facebook_mail_editor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4.0dip"
                        android:layout_marginTop="4.0dip"
                        android:layout_marginRight="6.0dip"
                        android:hint="@string/photo_hint_comments"
                        android:maxLines="4"
                        android:minLines="2"
                        android:textColor="#000000">
                </EditText>
                <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/photo_action_region"
                        android:background="@drawable/bottom_bar"
                        android:paddingTop="2.0dip"
                        android:visibility="visible"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/photo_your_comments"
                        >
                        <Button
                                android:id="@+id/facebook_mail_send_button"
                                android:focusable="false"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2.0dip"
                                android:layout_marginTop="2.0dip"
                                android:layout_marginRight="5.0dip"
                                android:layout_marginBottom="3.0dip"
                                android:text="@string/facebook_mail_detail_reply"
                                android:background="@drawable/blue_button_background"
                                android:layout_weight="0.5"
                                >
                        </Button>
                        <Button
                                android:id="@+id/facebook_mail_reply_cancel"
                                android:focusable="false"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5.0dip"
                                android:layout_marginTop="2.0dip"
                                android:layout_marginRight="2.0dip"
                                android:layout_marginBottom="3.0dip"
                                android:text="@string/sns_cancel"
                                android:background="@drawable/blue_button_background"
                                android:layout_weight="0.5"
                                >
                        </Button>
                </LinearLayout>
        </LinearLayout>
</LinearLayout>
